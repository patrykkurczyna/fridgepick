---
import "../styles/globals.css";
import { Logo } from "../components/Logo";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Zarządzaj produktami w lodówce i planuj zbilansowane posiłki"
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=1" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png?v=1" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png?v=1" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
      <div class="max-w-md w-full space-y-8">
        <!-- Logo i Tytuł -->
        <div class="text-center">
          <a
            href="/"
            class="inline-block hover:opacity-80 transition-opacity cursor-pointer"
            aria-label="FridgePick - Strona główna"
          >
            <Logo client:load size="lg" variant="light" />
          </a>
          <h1 class="mt-6 text-3xl font-bold text-gray-900">
            {title}
          </h1>
        </div>

        <!-- Główna zawartość (formularz) -->
        <div class="bg-white rounded-lg shadow-md p-8">
          <slot />
        </div>

        <!-- Stopka (dodatkowe linki) -->
        <div class="text-center text-sm text-gray-600">
          <slot name="footer" />
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>
