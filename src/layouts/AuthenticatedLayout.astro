---
import "../styles/globals.css";
import { NavigationBar } from "@/components/navigation";
import { DemoModeIndicator } from "@/components/auth/DemoModeIndicator";

interface Props {
  title?: string;
  description?: string;
  currentPath: string;
  isDemo?: boolean;
}

const {
  title = "FridgePick - Inteligentne planowanie posiłków",
  description = "Zarządzaj produktami w lodówce i planuj zbilansowane posiłki",
  currentPath,
  isDemo = false,
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicons with cache busting -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=1" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png?v=1" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png?v=1" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    {isDemo && <DemoModeIndicator client:load />}
    <NavigationBar client:load currentPath={currentPath} isDemo={isDemo} />
    <main class="pb-20 md:pb-4">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }

  /* Safe area for iOS devices with home indicator */
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom);
  }
</style>
