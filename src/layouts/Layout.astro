---
import "../styles/globals.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "FridgePick - Inteligentne planowanie posiłków",
  description = "Zarządzaj produktami w lodówce i planuj zbilansowane posiłki"
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicons with cache busting -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=1" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png?v=1" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png?v=1" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
