---
import AuthenticatedLayout from "../../layouts/AuthenticatedLayout.astro";
import { RecipesView } from "@/components/recipes/RecipesView";

const title = "Przepisy - FridgePick";
const currentPath = Astro.url.pathname;

// Check if user is in demo mode
const isDemo = Astro.locals.user?.user_metadata?.is_demo ?? false;
---

<AuthenticatedLayout title={title} currentPath={currentPath} isDemo={isDemo}>
  <RecipesView client:load />
</AuthenticatedLayout>
