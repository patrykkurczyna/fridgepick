---
// Edit existing product page
import AuthenticatedLayout from "@/layouts/AuthenticatedLayout.astro";
import { ProductFormView } from "@/components/product-form/ProductFormView";

const { id } = Astro.params;
const currentPath = Astro.url.pathname;
---

<AuthenticatedLayout title="Edytuj produkt - FridgePick" currentPath={currentPath}>
  <ProductFormView mode="edit" productId={id} client:load />
</AuthenticatedLayout>
